%h1
  Bank Accounts

= link_to new_bank_account_path, class: "btn btn-primary" do
  New Bank Account

%table.table.table-bordered
  %thead
    %tr
      %th Account Number
      %th Client
      %th Balance
      %th Actions
  %tbody
    - @bank_accounts.each.with_index do |bank_account, index|
      %tr
        %td{:id => "bank_account_id_#{index}"} #{bank_account.account_number}
        %td{:id => "bank_account_client_#{index}"} #{ bank_account.client }
        %td{:id => "bank_account_amount_#{index}"} #{number_to_currency(bank_account.balance, unit: "Â£")}
        %td
          = link_to bank_account_path(bank_account.id), class: "btn btn-primary" do
            Show